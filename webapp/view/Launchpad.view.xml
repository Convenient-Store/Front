<mvc:View
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  controllerName="capstone.controller.Launchpad">
  <Page>
    <headerContent>
            <Bar>
                <contentLeft>
                    <core:Icon src="sap-icon://home" size="25px" press="onHomeIconPress"/>
                </contentLeft>
                <contentRight>
                    <core:Icon src="sap-icon://search" size="25px" class="myIconMargin" press="onSearchIconPress"/>
                    <core:Icon src="sap-icon://bell" size="25px" class="myIconMargin" press="onBellIconPress"/>
                    <core:Icon src="sap-icon://account" size="25px" class="myIconMargin" press="onAccountIconPress"/>
                </contentRight>
                
            </Bar>
    </headerContent>

    <content>
      <VBox class="sapUiSmallMargin">
        <items>
          <Title text="재고 관리" class="categoryTitle" />
            <HBox>
              <items>
                <Panel width="250px" backgroundDesign="Transparent">
                  <GenericTile
                      header="재고주문"
                      press="onPressInventoryOrder">
                  </GenericTile>
                    
                </Panel>
                <Panel width="250px" backgroundDesign="Transparent">
                    <GenericTile
                      header="재고 주문 내역"
                      press="onPressCheckInventoryOrder">
                      <TileContent>
                          <NumericContent
                              value="10"
                              indicator="Up"
                              valueColor="Good" />
                      </TileContent>
                  </GenericTile>
                </Panel>
                <Panel width="250px" backgroundDesign="Transparent">
                  
                    <GenericTile
                      header="재고"
                      press="onPressCheckInventoryOrder">
                      <TileContent>
                          <NumericContent
                              value="5546"
                              indicator="Up"
                              valueColor="Good" />
                      </TileContent>
                  </GenericTile>
                </Panel>
              </items>
            </HBox>
          
          <Title text="입고 및 일정 관리" class="categoryTitle" />
            <HBox>
              <items>
                <Panel width="250px" backgroundDesign="Transparent">
                    <GenericTile
                      header="입고일정"
                      press="onPressSchedule">
                      <TileContent>
                          <NumericContent
                              value="10"
                              indicator="Up"
                              valueColor="Good" />
                      </TileContent>
                  </GenericTile>
                </Panel>
                <Panel width="250px" backgroundDesign="Transparent">
                    <GenericTile
                      header="유통기한"
                      press="onPressExpirationDate">
                      <TileContent>
                          <NumericContent
                              value="10"
                              indicator="Up"
                              valueColor="Good" />
                      </TileContent>
                  </GenericTile>
                </Panel>
              </items>
            </HBox>

          <Title text="판매" class="categoryTitle" />
            <HBox>
              <items>
                <Panel width="250px" backgroundDesign="Transparent">
                    <GenericTile
                      header="지점별 판매량"
                      press="onPressSalesDetail">
                      <TileContent>
                          <NumericContent
                              value="10"
                              indicator="Up"
                              valueColor="Good" />
                      </TileContent>
                  </GenericTile>
                </Panel>
                <Panel width="250px" backgroundDesign="Transparent">
                    <GenericTile
                      header="프로모션"
                      press="onPressPromotion">
                      <TileContent>
                          <NumericContent
                              value="10"
                              indicator="Up"
                              valueColor="Good" />
                      </TileContent>
                  </GenericTile>
                </Panel>
              </items>
            </HBox>

          <Title text="재무" class="categoryTitle" />
            <HBox>
              <items>
                <Panel width="250px" backgroundDesign="Transparent">
                    <GenericTile
                      header="판매 이익"
                      press="onPressSalesProfit">
                  </GenericTile>
                </Panel>
                <Panel width="250px" backgroundDesign="Transparent">
                    <GenericTile
                      header="지출 내역"
                      press="onPressExpenditureDetails">
                  </GenericTile>
                </Panel>
              </items>
            </HBox>
        </items>
      </VBox>
    </content>
  </Page>
</mvc:View>