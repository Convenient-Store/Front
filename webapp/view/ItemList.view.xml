<mvc:View
    controllerName="capstone.controller.ItemList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    displayBlock="true">

    <Page title="상품 목록 (ZCAP_ITEMS)">
        <table:Table
            id="itemsTable"
            rows="{/ZCAP_ITEMSSet}"
            visibleRowCount="10"
            selectionMode="Single"
            enableColumnReordering="true"
            width="auto">

            <table:columns>
                <table:Column>
                    <Label text="상품 ID" />
                    <table:template>
                        <Text text="{item_id}" />
                    </table:template>
                </table:Column>
                <table:Column>
                    <Label text="상품명" />
                    <table:template>
                        <Text text="{item_name}" />
                    </table:template>
                </table:Column>
                <table:Column>
                    <Label text="카테고리" />
                    <table:template>
                        <Text text="{item_category}" />
                    </table:template>
                </table:Column>
                <table:Column>
                    <Label text="가격" />
                    <table:template>
                        <Text text="{item_price}" />
                    </table:template>
                </table:Column>
                <table:Column>
                    <Label text="브랜드" />
                    <table:template>
                        <Text text="{item_brand}" />
                    </table:template>
                </table:Column>
                <table:Column>
                    <Label text="사이즈" />
                    <table:template>
                        <Text text="{item_size}" />
                    </table:template>
                </table:Column>
            </table:columns>
        </table:Table>
    </Page>
</mvc:View>